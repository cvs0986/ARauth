apiVersion: v1
kind: Secret
metadata:
  name: iam-secrets
  namespace: nuage-identity
type: Opaque
stringData:
  # Database password
  database-password: "your-database-password"
  
  # Redis password (if required)
  redis-password: ""
  
  # Encryption key (32 bytes for AES-256)
  encryption-key: "CHANGE_ME_IN_PRODUCTION_32_BYTES_KEY"
  
  # Hydra admin URL (if different from default)
  hydra-admin-url: "http://hydra:4445"

